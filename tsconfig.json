{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "newLine": "lf",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "types": [
      "node",
      "webpack",
      "webpack-dev-server",
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}